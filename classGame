using System;

namespace classGame
{
    class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player("Гатс", "Берсерк", 100, 5);
            player.ShowInfo();
        }
    }

    class Player
    {
        private string _name;
        private string _characterClass;
        private int _health;
        private int _damag;

        public Player(string name, string characterClass, int health, int damage)
        {
            _name = name;
            _characterClass = characterClass;
            _health = health;
            _damag = damage;
        }

        public void ShowInfo()
        {
            Console.WriteLine($"Имя игрока: {_name}\nКласс игрока: {_characterClass}\nЖизни игрока: {_health}\nУрон от атаки: {_damag}");
        }
    }
}
