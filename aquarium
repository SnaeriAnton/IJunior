using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace aquarium
{
    class Program
    {
        static void Main(string[] args)
        {
            Aquarium aquarium = new Aquarium(GetNumber());
            aquarium.LiveFish();
        }

        static private int GetNumber()
        {
            int number = 0;
            bool resultConvert = false;
            int aquariumCapacity = 30;
            Console.Write("Какой вместимости вам нужен аквариум?\n" +
                $"Масимальная вместимость {aquariumCapacity} рыб.\n");
            while (resultConvert == false)
            {
                resultConvert = int.TryParse(Console.ReadLine(), out number);
                if (resultConvert == false || number <= 0)
                {
                    Console.WriteLine("Выввели не коректное значение попробуйте снова.");
                    resultConvert = false;
                }
                else if (number > aquariumCapacity)
                {
                    number = aquariumCapacity;
                }
            }
            return number;
        }
    }

    class Aquarium
    {
        private int _quantityFush;
        private List<Fish> _fishes = new List<Fish>();

        public Aquarium(int countFish)
        {
            _quantityFush = countFish;
        }

        public void LiveFish()
        {
            int fishCountInAquariumNow, fishCountInPAckageNow;
            bool isMudAquarium = false;
            while (isMudAquarium == false)
            {
                RemoveDeadFish();
                fishCountInAquariumNow = CountFishInAquarium(true);
                fishCountInPAckageNow = CountFishInAquarium(false);
                IncreaseAgeFish();

                Console.WriteLine($"\n\nВ аквариуме {fishCountInAquariumNow} из {_quantityFush}\n" +
                    $"В пакетах {fishCountInPAckageNow}\n\n");
                ShowInfo(true);

                Console.WriteLine($"\n\nВыберите действие:\n" +
                    $"1. Добавить новую рыбку.\n" +
                    $"2. Вытащить рыбку из аквариума.\n" +
                    $"3. Вернуть рыбку в аквариум.\n" +
                    $"4. Выбросить рыбку.\n" +
                    $"5. Ничего не делать.\n");
                switch (GetNumberFish(5))
                {
                    case 1:
                        if (fishCountInAquariumNow < _quantityFush)
                        {
                            AddFish();
                        }
                        else
                        {
                            Console.WriteLine("Аквариум полон.");
                        }
                        break;
                    case 2:
                        if (_fishes.Count == 0)
                        {
                            Console.WriteLine("Нету ни одный рыбки.");
                        }
                        else
                        {
                            Console.WriteLine("Выберите рыбку которую хотите вытащить из аквариума: ");
                            GetFishOut((GetNumberFish(_fishes.Count) - 1), false, "в пакете");
                        }
                        break;
                    case 3:
                        if (_fishes.Count == 0)
                        {
                            Console.WriteLine("Нету ни одный рыбки.");
                        }
                        else
                        {
                            if (fishCountInAquariumNow >= _quantityFush)
                            {
                                Console.WriteLine("Вы не можете вернуть рыбку в аквариум. Аквариум полон");
                            }
                            else
                            {
                                ShowInfo(false);
                                Console.WriteLine("\nВыберите рыбку которую хотите поместить обратно в аквариум: ");
                                GetFishOut((GetNumberFish(_fishes.Count) - 1), true, "в аквариум");
                            }
                        }
                        break;
                    case 4:
                        if (_fishes.Count == 0)
                        {
                            Console.WriteLine("Нету ни одный рыбки.");
                        }
                        else
                        {
                            ShowInfo(true, true);
                            Console.WriteLine("\nВыберите рыбку которую хотите убить: ");
                            RemoveFish(GetNumberFish(_fishes.Count) - 1);
                        }
                        break;
                    case 5:
                        break;
                }

                Console.WriteLine("\nНе парали почистить аквариум? Да или Нет.");
                if (GetAnswerUser() == "Да")
                {
                    isMudAquarium = true;
                }
            }
            Console.WriteLine("Аквариум почищен.");
        }

        private string GetAnswerUser()
        {
            string userAnswer = " ";
            bool result = false;
            while (result == false)
            {
                userAnswer = Console.ReadLine();
                if (userAnswer == "Да")
                {
                    result = true;
                }
                else if (userAnswer == "Нет")
                {
                    Console.WriteLine("А надо бы!");
                    result = true;
                }
                else
                {
                    Console.WriteLine("Вы ввели не коректное значение. Попробуйте еще раз.");
                }
            }
            return userAnswer;
        }

        private void ShowInfo(bool statusFish, bool notStatusFish = false)
        {
            for (int i = 0; i < _fishes.Count; i++)
            {
                if (_fishes[i].Status == statusFish || notStatusFish == true)
                {
                    _fishes[i].ShowInfoFish(i + 1);
                }
            }
        }

        private void AddFish()
        {
            Console.WriteLine("\nВыберите рыбку которую хотите добавить\n" +
                "1.Акула\n" +
                "2.Кит\n" +
                "3.Золотая рыбка\n" +
                "4.Сом\n" +
                "5.Скат\n" +
                "6.Морская звезда\n" +
                "7.Гуппи\n" +
                "8.Черепаха\n" +
                "Введите номер рыбы который хотите добавить: ");
            int numberFish = GetNumberFish(8);

            Console.Write("введите имя рыбки: ");
            string nameFish = Console.ReadLine();

            switch (numberFish)
            {
                case 1:
                    _fishes.Add(new Shark(nameFish));
                    break;
                case 2:
                    _fishes.Add(new Whale(nameFish));
                    break;
                case 3:
                    _fishes.Add(new GoldFish(nameFish));
                    break;
                case 4:
                    _fishes.Add(new Catfish(nameFish));
                    break;
                case 5:
                    _fishes.Add(new Slope(nameFish));
                    break;
                case 6:
                    _fishes.Add(new Starfish(nameFish));
                    break;
                case 7:
                    _fishes.Add(new Guppy(nameFish));
                    break;
                case 8:
                    _fishes.Add(new Turtle(nameFish));
                    break;
            }
            Console.WriteLine($"Вы добавили рыбку {_fishes[_fishes.Count - 1].Name} в аквариум.");
        }

        private int CountFishInAquarium(bool statusFish)
        {
            int countFishInAquarium = 0;
            for (int i = 0; i < _fishes.Count; i++)
            {
                if (_fishes[i].Status == statusFish)
                {
                    countFishInAquarium++;
                }
            }
            return countFishInAquarium;
        }

        private int GetNumberFish(int countList)
        {
            int number = 0;
            bool resultConvert = false;
            while (resultConvert == false)
            {
                resultConvert = int.TryParse(Console.ReadLine(), out number);
                if (resultConvert == false)
                {
                    Console.WriteLine("Выввели не коректное значение попробуйте снова.");
                }
                else if (number <= 0 || number > countList)
                {
                    Console.WriteLine("Такого номера нету. Введите другое значение.");
                    resultConvert = false;
                }
            }
            return number;
        }

        private void RemoveDeadFish()
        {
            for (int i = 0; i < _fishes.Count; i++)
            {
                if (_fishes[i].CheckAgeFish())
                {
                    RemoveFish(i);
                    i--;
                }
            }
        }

        private void IncreaseAgeFish()
        {
            for (int i = 0; i < _fishes.Count; i++)
            {
                _fishes[i].Live();
            }
        }

        private void RemoveFish(int numberFish)
        {
            Console.WriteLine($"Рыбка {_fishes[numberFish].Name} умерала от старости, голода или вы ее смыли в унитаз.");
            _fishes.RemoveAt(numberFish);
        }


        private void GetFishOut(int numberFish, bool statusFish, string messageForUser)
        {
            if (_fishes[numberFish].Status == statusFish)
            {
                Console.WriteLine($"Вы не можете поместить эту рыбку {messageForUser}. Она уже перемещена.");
            }
            else
            {
                Console.WriteLine($"Вы хотите переместить рыбку {messageForUser}?\n" +
                    "Введите Да или Нет:");

                string userInput = GetUserAnswer();
                if (userInput == "Да")
                {
                    _fishes[numberFish].ChangeStatusFish(statusFish);
                    Console.WriteLine($"Рыба перемещена {messageForUser}.");
                }
                else if (userInput == "Нет")
                {
                    Console.WriteLine("Вы передумали.");
                }

            }
        }

        private string GetUserAnswer()
        {
            string stringUser = " ";
            bool resultConvert = false;
            while (resultConvert == false)
            {
                stringUser = Console.ReadLine();
                if (stringUser == "Да")
                {
                    resultConvert = true;
                }
                else if (stringUser == "Нет")
                {
                    resultConvert = true;
                }
                else
                {
                    Console.WriteLine("Вы ввели не корректное значение, попробуйте еще раз.");
                }
            }
            return stringUser;
        }

    }

    abstract class Fish
    {
        private string _view;

        public string Name { get; private set; }
        protected int Lifespan { get; set; }
        public int Age { get; private set; }
        public bool Status { get; private set; }

        public Fish(string name, string view, int lifespan)
        {
            Name = name;
            _view = view;
            Lifespan = lifespan;
            Status = true;
        }

        public bool CheckAgeFish()
        {
            return Age == Lifespan;
        }

        public void Live()
        {
            if (Lifespan != Age)
            {
                Age++;
            }
        }

        public void ShowInfoFish(int numberFish)
        {
            string statusFish = Status == true ? "В аквариуме" : "В пакете";
            Console.WriteLine($"{numberFish}. Имя рыбки: {Name}.\n" +
                $"Вид рыбы: {_view}.\n" +
                $"Возрост рыбы: {Age}\n" +
                $"Место нахождения рыбы {statusFish}\n" +
                $"------------------------------------------");
        }

        public void ChangeStatusFish(bool newStatusFish)
        {
            Status = newStatusFish;
        }
    }

    class Shark : Fish
    {
        public Shark(string name) : base(name, "Акула", 30) { }
    }

    class Whale : Fish
    {
        public Whale(string name) : base(name, "Кит", 80) { }
    }

    class GoldFish : Fish
    {
        public GoldFish(string name) : base(name, "Золотая рыбка", 4) { }
    }

    class Catfish : Fish
    {
        public Catfish(string name) : base(name, "Сом", 60) { }
    }

    class Slope : Fish
    {
        public Slope(string name) : base(name, "Скат", 16) { }
    }

    class Starfish : Fish
    {
        public Starfish(string name) : base(name, "Морская звезда", 45) { }
    }

    class Guppy : Fish
    {
        public Guppy(string name) : base(name, "Гуппи", 2) { }
    }

    class Turtle : Fish
    {
        public Turtle(string name) : base(name, "Черепаха", 200) { }
    }
}
