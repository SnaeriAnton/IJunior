using System;

namespace readInt
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine($"Введенное пользователем число: {ReadAndConvert()}");
        }
        static int ReadAndConvert()
        {
            bool result = true;
            int userNumber = 0;

            while (result)
            {
                Console.Write("Введите пожалуйста число: ");
                result = !int.TryParse(Console.ReadLine(), out userNumber);
                Console.WriteLine("Не верно попробуйте еще раз");
                Console.Clear();
            }
            return userNumber;
        }
    }
}
