using System;

namespace readInt
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine($"Введенное пользователем число: {TryToConvert()}");
        }
        static int TryToConvert()
        {
            string userInput = " ";
            bool result = true;
            int userNumber = 0;

            while (result)
            {
                Console.Write("Введите пожалуйста число: ");
                userInput = Console.ReadLine();
                result = !int.TryParse(userInput, out userNumber);
                Console.WriteLine("Не верно попробуйте еще раз");
                Console.Clear();
            }
            return userNumber;
        }
    }
}
